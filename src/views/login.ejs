<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <title>Login</title>
    <link href="/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles.css" />
    <script src="/bootstrap.bundle.js"></script>
  </head>
  <body class="text-center h-100 d-flex align-items-center py-5">
    <main class="form-signin w-100 m-auto">
      <form action="/users/login" method="POST">
        <img
          class="mb-4 rounded-3"
          src="/CarLogoDark.png"
          alt="Carpooly Logo"
          width="150"
          height="auto"
        />
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <% if(typeof errors !== "undefined") {errors.forEach((error)=>{ %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= error.msg %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% })}; %> <% if(success_msg && success_msg.length > 0 ){ %>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <%= success_msg %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %> <% if(error_msg && error_msg.length > 0){ %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= error_msg %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %> <% if(error && error.length > 0){ %>
        <div
          class="alert alert-warning alert-dismissible fade show"
          role="alert"
        >
          <%= error %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>
        <div class="form-floating input-top">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="name@example.com"
          />
          <label for="email">Email address</label>
        </div>
        <div class="form-floating input-bottom mb-4">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
          />
          <label for="password">Password</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">
          Sign in
        </button>
      </form>
      <div class="my-5">
        <a href="/" class="text-muted">Carpooly Auth Client Test Site</a>
      </div>
    </main>
  </body>
</html>
